form pauseMenu
{
    alignment = ALIGN_VCENTER_HCENTER

    container controlsContainer
    {
        width = 100%

        label controlsLabel
        {
            size = 100%, 30
			textAlignment =  ALIGN_LEFT
            text = Controls
            fontSize = 22
        }

        radioButton useGamepad
        {
            group = controls
            position = 0, 35
            width = 150
            selected = true
            text = Gamepad
        }

        radioButton useTilt : useGamepad
        {
            position = 150, 35
            text = Tilt
            selected = false
        }
    }
    
    checkBox useCompositing
    {
        position = 0, 80
        width = 150
        selected = false
        text = Comp
    }

    button newGameButton
    {
        position = 0, 130
        size = 150, 50
        text = New Game
    }

    button quitGameButton : newGameButton
    {
        position = 150, 130
        text = Quit Game
    }
}